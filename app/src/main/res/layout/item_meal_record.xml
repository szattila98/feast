<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="ren.practice.feast.model.Meal" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/text_meal_shown_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.shownName}"
                tools:text="1. Food show name" />

            <TextView
                android:id="@+id/text_meal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{item.date.toString()}"
                tools:text="1998.08.06" />

            <TextView
                android:id="@+id/text_meal_recipe_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{item.recipe.name}"
                tools:text="Recipe" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
